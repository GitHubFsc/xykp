.main {
  width: 100%;
  height: 100%;
  padding-top: 20rpx;
  background-color: #fafafc;
  font-size: 28rpx;
  font-family: PingFangSC-Regular;
}

.Amount {
  padding-left: 20rpx;
  width: 100%;
  height: 290rpx;
  background-color: #fff;
}

.Amount text {
  line-height: 64rpx;
}

.Amount input {
  padding: 10rpx 0 10rpx 20rpx;
}

.Amount .Apply {
  margin-top: 64rpx;
  font-size: 24rpx;
  padding-bottom: 30rpx;
}

.Amount .AmountBox {
  display: flex;
  margin-top: 40rpx;
}

.reason {
  width: 100%;
  height: 200rpx;
  background-color: #fff;
  margin-top: 20rpx;
}

.reason .reason_box {
  padding: 30rpx 20rpx 30rpx 20rpx;
  display: flex;
  justify-content: space-between;
}

.reason .reason_box text {
  color: #999;
}

.reason .reason_box image {
  display: inline-block;
  width: 17rpx;
  height: 32rpx;
  vertical-align: middle;
  margin-left: 10rpx;
  margin-top: -2px;
}

.reason .reason_boxone {
  border-bottom: 1rpx solid #e5e5e5;
}

.Explanation {
  width: 100%;
  height: auto;
  background-color: #fff;
  margin-top: 20rpx;
  padding-left: 20rpx;
}
.Explanation .ExplanationBox{
  display:flex;
  flex-wrap:wrap;
  padding-top: 66rpx;
}
.Explanation .Explanationchildon {
  padding-top: 40rpx;
}
.Explanation .file {
  width: 160rpx;
  height: 160rpx;
  border: 1rpx solid #979797;
  text-align: center;
}

.Explanation .file .fontsize {
  font-size: 24rpx;
  margin-top: 10rpx;
  color: #999;
}

.Explanation .Explanationchildtw image {
  width: 32rpx;
  height: 32rpx;
  margin-top: 34rpx;
}

.img_item {
  width: 160rpx;
  height: 160rpx;
  border: 1rpx solid #979797;
  text-align: center;
  margin-right:20rpx;
  margin-bottom: 20rpx;
}
.img_item image{
  width: 100%;
  height: 100%;
}
.Explanation .ApplyForRefund {
  margin: auto;

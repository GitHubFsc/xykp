/**index.wxss**/
page{
  background: #f8f8f8;
}
.top{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 320rpx;
  background: #008CD6;
}
.my-1{
  position: relative;
  z-index: 3;
  padding: 20rpx;
  margin-bottom: 20rpx;

}
.my-1>image{
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 320rpx;
}
.my-1 .t{
  display: flex;
  align-items: center;
  border-bottom: 1px dashed #fff;
  padding-bottom: 33rpx;
  margin-bottom: 46rpx;
  position: relative;
  z-index: 3
}
.my-1 .t .tl{
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  margin-right: 24rpx;
  border-radius: 50%;
}
.my-1 .t .tl image{
  width: 100%;
  height: 100%;
}
.my-1 .t .tr{
  color: #fff;

}
.my-1 .t .tr .text1{
  font-size: 32rpx;
  margin-bottom: 20rpx;
}
.my-1 .t .tr .text2{
  font-size: 28rpx;
}
.my-1 .b{
  display: flex;
  padding: 0 20rpx;
   position: relative;
  z-index: 3
}
.my-1 .b .item{
  color: #fff;
  font-size: 26rpx;
  margin-right: 80rpx;
}
.my-1 .b .item text{
  margin-left: 16rpx
}

.my-2{
  width: 710rpx;
  margin: 0 auto;
  background: #fff;
  height: 100rpx;
  display: flex;
  align-items: center;
  border-radius: 10rpx;
  position: relative;
  z-index: 3;
  padding: 0 22rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.my-2 .l{
  font-size: 28rpx;
  color: #333;
  flex: 1;
}
.my-2 .r{
font-size: 28rpx;
  color: #333;
  display: flex;
  align-items: center;
}

.my-2 .r image{
  width: 15rpx;
  margin-left: 26rpx;
}

.my-3{
  width: 710rpx;
  margin: 0 auto;
  background: #fff;
  border-radius: 10rpx;
  padding: 30rpx 22rpx;
  box-sizing: border-box;
  margin-bottom: 20rpx;
}
.my-3 .title{
  font-size: 28rpx;
  color: #333;
  margin-bottom: 45rpx;
}
.my-3 .bot{
  display: flex;
  
}
.my-3 .bot .item{
  flex: 1;
  text-align: center;
}
.my-3 .bot .item .img{
  width: 100%;
  height: 42rpx;
  margin-bottom: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.my-3 .bot .item .img image{
  width: 45rpx;
  height: 42rpx;
}
.my-3 .bot .item .text{
  font-size: 28rpx;
  color: #333;
}


.my-4{
  display: flex;
  flex-wrap: wrap;
  background: #fff;
  width: 710rpx;
  margin: 0 auto;
  border-radius: 10rpx;
  padding: 50rpx 22rpx;
  box-sizing: border-box;
  padding-bottom: 0;
}
.my-4 .item{
  width: 25%;
  text-align: center;
  margin-bottom: 50rpx;
}
.my-4 .item .img{
  width: 45rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
}
.my-4 .item .img image{
  width: 100%;
  height: auto;
}
.my-4 .item .text{
  font-size: 28rpx;
}



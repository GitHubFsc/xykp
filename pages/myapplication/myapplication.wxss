/* pages/mycollection/mycollection.wxss */
.swiper-tab{
    width: 100%;
    text-align: center;
    line-height: 100rpx;margin-bottom: 0rpx;border-top: 1px solid #e5e5e5;border-bottom: 1px solid #e5e5e5}
.swiper-tab-list{  font-size: 28rpx;
    display: inline-block;
    width: calc(100% / 5);
    color: #999;

}
.on{ color: #008CD6;
    border-bottom: 4rpx solid #008CD6;}

.swiper-box{ display: block; height: 100%; width: 100%; overflow: hidden;padding: 0 20rpx;box-sizing: border-box; background: #f8f8f8;}
.swiper-box view{
    

}
.swiper-box .dd{
  padding: 20rpx;
  background: #fff;
  margin-top: 20rpx;
}
.swiper-box .dd .title{
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;

}
.swiper-box .dd .title .title-l{
  font-size: 28rpx;
  color: #666;
  flex: 1;
}
.swiper-box .dd .title .title-r{
  font-size: 28rpx;
  color: #008CD6;
}
.swiper-box .item{
  display: flex;
  align-items: center;
  margin-bottom: 0rpx;
  
  padding-bottom: 20rpx;
}
.swiper-box .item .l{
  width: 180rpx;
  height: 144rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.swiper-box .item .l image{
  width: 100%;
  height: 100%;
}
.swiper-box .item .r{
  flex: 1;
}
.swiper-box .item .r .text1{
  font-size: 32rpx;
  color: #666;
  margin-bottom: 15rpx;
}
.swiper-box .item .r .text2{
   font-size:24rpx;
  color: #999;
  margin-bottom: 20rpx;
}
.swiper-box .item .r .text4{
   font-size:26rpx;
  color: #999;
  display: flex;
  justify-content: space-between;
}
.swiper-box .item .r .text4 text{
  color: #EA1854;
  
  font-size: 26rpx;
}
.swiper-box .sp{
  text-align: right;
  font-size: 26rpx;
  color: #666;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.swiper-box .sp text{
  font-size: 34rpx;
  color: #EA1854;
  margin-left: 26rpx;
}
.swiper-box .btn{
  display: flex;
  justify-content: flex-end;
  margin-top: 10rpx; 
  border-top: 1px solid #e5e5e5;
  padding-top: 20rpx;
}
.swiper-box .btn view{
  line-height: 60rpx;
  border-radius: 30rpx;
  border: 1px solid #EA1854;
  padding: 0 30rpx;
  color: #EA1854;
  font-size: 32rpx;
  margin-left: 22rpx;
}
.gray{
  color: #999 !important;
}
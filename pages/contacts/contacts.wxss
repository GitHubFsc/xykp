/* pages/receivingplace/receivingplace.wxss */

.rece{
  height: 100vh;
  background: #f8f8f8;
  padding: 20rpx 0;
}
.rece .item{
  background: #fff;
  
  width: 710rpx;
  margin: 0 auto;
  border-bottom: 1px solid #e5e5e5;
}
.rece .item:last-child{
  border: none;
}
.rece .item .t{
  
  display: flex;
  align-items: center;
  height: 100rpx;
  padding: 0 20rpx;
  justify-content: space-between;
}
.rece .item .t .text1{
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}
.rece .item .t .text1 text{
  margin-left: 44rpx;
}
.rece .item .t .text2{
  font-size: 28rpx;
  color: #333;
}
.rece .item .b{
  display: flex;
 
  justify-content: flex-end;
}
.rece .item .b image{
  width: 34rpx;
}
.rece .item .b  .btn{
  margin-left: 34rpx;
}

.xz{
   width: 250rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: #008CD6;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  border-radius: 10rpx;
  margin: 0 auto;
  margin-top: 50rpx;
}
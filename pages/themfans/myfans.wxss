/* pages/myfans/myfans.wxss */

.fans{
  border-top: 1px solid #e5e5e5;
  padding: 0 20rpx;
}
.fans .item{
  display: flex;
  align-items: center;
  height: 119rpx;
  border-bottom: 1px solid #e5e5e5;
}
.fans .item .l{
  width: 64rpx;
  border-radius: 50%;
  height: 64rpx;
  overflow: hidden;
  margin-right: 15rpx;
}
.fans .item .l image{
  width: 100%;
  height: 100%;
}
.fans .item .m{
  font-size: 30rpx;
  color: #333;
  flex: 1;
}
.fans .item .r{
  background: #008CD6;
  border-radius: 10rpx;
  width: 160rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
}
.fans .item .on{
  background:#D8D8D8;
}
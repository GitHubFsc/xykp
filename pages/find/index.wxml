<swiper class="swipercontar" indicator-active-color="#008CD6" indicator-color="#fff" indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
  <block wx:for="{{background}}" wx:key="*this">
    <swiper-item>
      <image 
        src="{{item.img_url}}" 
        class="swiperimg" 
        mode="aspectFit" 
        data-type="{{item.type}}"
        bindtap="jump" 
        data-id="{{item.obj_id}}">
      </image>
    </swiper-item>
  </block>
</swiper>



/* pages/search/index.wxss */

page {
  padding: 20rpx;
  box-sizing: border-box;
}

.search {
  position: static;
  width: 100%;
  margin: 0 auto;
  margin-top: 20rpx;
  padding-right: 0;
  box-sizing: border-box;
}

.ite {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
  border-bottom: 1px solid #ededed;
}

.ite image {
  flex: 0 0 220rpx;
  width: 420rpx;
  height: 220rpx;
}

.ch1 {
  font-size: 34rpx;
}

.ch2 {
  font-size: 24rpx;
  color: #999;
  margin-top: 15rpx;
  line-height: 1.6;
}

.big {
  padding-left: 20rpx;
}

.search view {
  height: 100%;
  width: 100rpx;
  /* background: #EA0E4D; *//* color: #fff; */
  text-align: center;
  line-height: 80rpx;
  font-size: 28rpx;
}

.text {
  flex: 1;
  height: 100%;
}

.title {
  margin-top: 50rpx;
}

.tags {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.tags view {
  font-size: 28rpx;
  color: #666;
  padding: 10rpx 20rpx;
  background: #fafafa;
  border-radius: 10rpx;
  margin: 10rpx;
}

.title {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.title .left {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.title .right {
  font-size: 30rpx;
  color: #999;
}

.list {
  height: calc(100vh - 160rpx);
  padding-top: 40rpx;
  box-sizing: border-box;
}

.title .right image {
  margin-left: 10rpx;
}

.title .right navigator image {
  width: 14rpx;
}

.title .right navigator {
  display: flex;
  align-items: center;
}

.text-1 {
  font-size: 32rpx;
  color: #333;
}

.text-2 {
  font-size: 26rpx;
  color: #999;
  margin: 10rpx 0;
}

.text-3 {
  font-size: 24rpx;
  color: #999;
}

.text-4 {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.price {
  font-size: 32rpx;
  color: #ea0e4d;
}

.text-4 image {
  width: 44rpx;
}

page::before {
  content: '';
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 2rpx;
  box-shadow: 0 -2px 4px 0 rgba(0, 0, 0, 0.10);
  z-index: 9999;
}
.nb::after{
  display: none
}

image{
  max-width: 100%;
}

.nb{
  height: auto;
  width: auto;
  padding: 0;
  background: transparent;
}

.container {
  position: relative;
}

.di {
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
}

.search {
  position: fixed;
  left: 20rpx;
  top: 20rpx;
  right: 20rpx;
  height: 80rpx;
  background: #fff;
  box-shadow: 0 4rpx 20rpx 0 rgba(7, 39, 98, 0.10);
  border-radius: 10rpx;
  z-index: 22;
  padding: 0 20rpx;
  display: flex;
  align-items: center;
}

.search image {
  width: 36rpx;
  margin-right: 20rpx;
}

.search .text {
  font-size: 26rpx;
  flex: 1;
  height: 100%;
  color: #c4c4c4;
  line-height: 80rpx;
}

.pd {
  padding: 20rpx;
}

.bigtitle {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.bigtitle .left {
  font-size: 30rpx;
  color: #333;
}

view {
  box-sizing: border-box;
}

.in {
  margin-top: 20rpx;
}

.p {
  font-size: 28rpx;
  color: #666;
  text-align: justify;
  margin-top: 20rpx;
}

.in image {
  width: 100%;
  border-radius: 20rpx;
  margin-top: 20rpx;
}

.list-float {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
}

.list-float > view {
  width: 100%;
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  flex-wrap: wrap;
}

.list-float>view>navigator{
  width: 48%;
}

.cdk {
  height: 100vh;
}

.list-img-node {
  width: 100%;
  border-radius: 20rpx;
  height: 400rpx;
}

.list-video {
  position: relative;
}

.list-play {
  width: 72rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate3d(-50%, -50%, 0);
}

.list-h2 {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.list-h2 image {
  width: 40rpx;
  height: 40rpx;
  border-radius: 100%;
  margin-right: 10rpx;
}

.list-h1 {
  font-size: 30rpx;
  color: #333;
  margin: 10rpx 0;
}

.fff {
  background: #fff;
  padding: 30rpx 20rpx;
  border-radius: 20rpx;
}

.fang {
  border-radius: 0;
}

.list-item {
  margin-top: 20rpx;
  width: 48%;
}

.ovbox {
  width: 100%;
  overflow: auto;
}

.ovrow {
  display: flex;
  align-items: flex-start;
}

.ovrow navigator {
  margin-right: 20rpx;
}

.mf {
  position: absolute;
  right: 0;
  top: 0;
  background: #008cd6;
  border-radius: 0 10rpx 0 10rpx;
  z-index: 2;
  color: #fff;
  font-size: 28rpx;
  padding: 5rpx 10rpx;
}

.ovimg {
  overflow: hidden;
  border-radius: 10rpx;
  position: relative;
}

.ovimg image {
  width: 300rpx;
  display: block;
  height: 230rpx;
}

.ovh1 {
  font-size: 30rpx;
  color: #333;
  margin-top: 15rpx;
}

.coum-item {
  display: flex;
  align-items: flex-start;
  border-bottom: 1px solid #ededed;
  padding: 20rpx 0;
}

.coum-item:last-child {
  border: 0;
}

.coum-img {
  width: 220rpx;
  margin-right: 20rpx;
  height: 220rpx;
  object-fit: cover;
}

.coum-right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
  flex: 1;
  height: 220rpx;
}

.coum-right>view {
  width: 100%;
}

.more-none {
  font-size: 22rpx;
  color: #999;
  text-align: center;
  padding: 30rpx;
}

.banner {
  width: 100%;
}

.f7 {
  background: #f7f7f7;
  min-height: 100vh;
}

.cell {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 90rpx;
  border-bottom: 1px solid #ededed;
}

.cell .left {
  font-size: 26rpx;
  color: #333;
}

.cell .right {
  font-size: 26rpx;
  color: #333;
  display: flex;
  align-items: center;
}

.cell:last-child {
  border: 0;
}

.swic {
  transform: scale(0.6);
}

.rrr {
  color: #ea0e4d;
  margin-left: 20rpx;
}

.gz {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #fff;
  border-top: 1px solid #ededed;
}

.gz image {
  width: 48rpx;
  height: 48rpx;
  border-radius: 100%;
  margin-right: 20rpx;
}

.le {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
}

.ctn {
  border: 1px solid #008cd6;
  color: #008cd6;
  height: 50rpx;
  border-radius: 50rpx;
  width: 130rpx;
  text-align: center;
  line-height: 48rpx;
  font-size: 26rpx;
}
